{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "include-v-in-tag": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "plugins": [{ "type": "sentence-case" }],
  "packages": {
    ".": {
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies['laddu'].version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies['laddu-core'].version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies['laddu-amplitudes'].version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies['laddu-extensions'].version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies['laddu-python'].version"
        },
        {
          "type": "toml",
          "path": "crates/laddu/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/laddu-core/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/laddu-amplitudes/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/laddu-extensions/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/laddu-python/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "py-laddu-cpu/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "py-laddu-mpi/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "py-laddu/pyproject.toml",
          "jsonpath": "$.project.version"
        },
        {
          "type": "generic",
          "path": "py-laddu/pyproject.toml"
        }
      ]
    }
  }
}
